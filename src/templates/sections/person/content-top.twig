{% from '_layouts/macros/lib.twig' import img %}
{% set image = entry.photo.one() %}

<div class="flex space-x-8">
    {% if image %}
        <div>
            {{ img(image, {
                transform: {width: 100, height: 125, format: 'webp'}
            }) }}
        </div>
    {% endif %}
    <div class="space-y-4 font-semibold text-xl">
        
        {% if entry.birthday %}
            <div>
                {{ "Born"|t('ff') }} {{ entry.birthday|date('short') }}
                ({{ "Age"|t('ff') }} {{ now.diff(entry.birthday).y }})
            </div>
        {% endif %}
        
        {% if entry.shortBio %}
            <div>
                {{ entry.shortBio|md|purify }}
            </div>
        {% endif %}
    </div>
</div>



