{% extends "@ff/_layouts/base.twig" %}

{% block content %}

    {% embed '_layouts/embeds/content-md.twig' with {showHeader: featuredImage == null, alignTitle: 'left'} %}

        {% block contentTop %}

            <div class="mt-8">
                {% include "@ff/_sections/#{entry.section.handle}/content-top.twig" ignore missing with {
                    entry, settings
                } only %}
            </div>

        {% endblock %}

        {% block contentBottom %}

            {% include "@ff/_sections/#{entry.section.handle}/content-bottom.twig" ignore missing with {
                entry, settings
            } only %}


        {% endblock %}

    {% endembed %}

{% endblock %}

