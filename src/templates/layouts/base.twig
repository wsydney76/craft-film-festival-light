{% extends "_layouts/main.twig" %}

{% set featuredImage = null %}
{% set settings = craft.app.plugins.plugin('ff-light').settings %}

{% if entry.featuredImage %}
    {% set featuredImage = entry.featuredImage.one %}
{% endif %}

{% block heroArea %}
    {% if featuredImage %}
        {% include '_layouts/partials/hero-area-display.twig' with {
            image: featuredImage,
            title: entry.title,
            tagline: entry.tagline
        } only %}
    {% endif %}
{% endblock %}